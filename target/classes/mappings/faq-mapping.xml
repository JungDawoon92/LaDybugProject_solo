<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="FaqDAO">
 	<resultMap type="faq" id="faqResult">
 		<id property="faq_sq" column="FAQ_SQ" />
 		<result property="faq_category" column="FAQ_CATEGORY" />
 		<result property="faq_nm" column="FAQ_NM" />
 		<result property="member_id" column="MEMBER_ID" />
 		<result property="faq_contents" column="FAQ_CONTENTS" />
 		<result property="faq_mtype" column="FAQ_MTYPE" />
 	<!-- <result property="fileName" column="FILENAME" />
 		<result property="realFname" column="REALFNAME" /> -->	
 	</resultMap>
 	
 	<insert id="insertFaq">
 		<![CDATA[
 			INSERT INTO FAQ(
			FAQ_CATEGORY, FAQ_NM, MEMBER_ID, FAQ_CONTENTS)
			VALUES (#{faq_category}, #{faq_nm}, #{member_id}, #{faq_contents})
 		]]>
 	</insert>
 	
 	<update id="updateFaq">
 		<![CDATA[
 			UPDATE FAQ SET FAQ_CONTENTS = #{faq_contents}
			WHERE FAQ_SQ = #{faq_sq}
 		]]>
 	</update>
 	
 	<delete id="deleteFaq">
 		<![CDATA[
 			DELETE FROM FAQ 
			WHERE FAQ_SQ = #{faq_sq}
 		]]>
 	</delete>
 	
 	<select id="detailFaq" resultType="faq">
 		<![CDATA[
 			SELECT * FROM FAQ 
			WHERE FAQ_SQ = #{faq_sq}
 		]]>
 	</select>
 	
 	<!-- Paging -->
 	 <select id="getFaqList" resultMap="faqResult">
 		<![CDATA[
 			SELECT * FROM FAQ ORDER BY FAQ_SQ DESC 
 			LIMIT #{startpage}, 10;
 			
 		]]>
 	</select>
 	
 	<select id="getAjaxFaqList" resultMap="faqResult">
 		<![CDATA[
 			SELECT * FROM FAQ WHERE FAQ_CATEGORY = #{choice};
 		]]>
 	</select>  
 	
 	<!-- Paging -->
 	<select id="getListCount" resultType="int">
 		<![CDATA[
 			SELECT COUNT(*) FROM FAQ ;
 		]]>
 	</select> 

